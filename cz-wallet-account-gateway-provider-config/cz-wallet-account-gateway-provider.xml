<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" 
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
			classpath:/org/springframework/beans/factory/xml/spring-beans-4.3.xsd 
			http://code.alibabatech.com/schema/dubbo 
			http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息,用于计算依赖关系
	<dubbo:application name="cz-gateway-provider"/> -->
	
	<!-- 使用zookeeper注册中心暴露服务地址 ,即zookeeper的所在服务器ip地址和端口号 --> 
	<!-- 使用zookeeper注册中心暴露服务地址 ,即zookeeper的所在服务器ip地址和端口号  file="${catalina.home}/dubbo-registry/dubbo-registry.properties" --> 
	<dubbo:registry protocol="zookeeper" address="192.168.0.49:2181"/>
	
	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20888"/>
	
	<dubbo:annotation package="com.anyepay.app.gateway.service.impl" />
</beans>